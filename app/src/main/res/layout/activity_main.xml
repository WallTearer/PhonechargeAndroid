<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.walltearer.phonecharge.android.MainActivity">

    <TextView
        android:id="@+id/chargeLabelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/charge_level_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/chargeLevel" />

    <TextView
        android:id="@+id/chargeLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/charge_loading"
        app:layout_constraintBaseline_toBaselineOf="@+id/chargeLabelLabel"
        app:layout_constraintLeft_toRightOf="@+id/chargeLabelLabel"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
